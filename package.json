{
  "name": "hello-zoom",
  "version": "0.1.0",
  "description": "A Zoom App Template",
  "workspaces": [
    "server",
    "app"
  ],
  "scripts": {
    "start": "npm run build -w app && npm run start -w server",
    "predev": "npm run build -w server",
    "dev": "docker compose --env-file=server/.env up",
    "prebuild": "mkdir -p dist",
    "build": "npm run build -ws",
    "clean": "docker compose --env-file=server/.env down -v --remove-orphans --rmi local",
    "prepare": "npx husky install server/.husky",
    "postprepare": "cd server && ./gen-secrets.sh"
  },
  "devDependencies": {
    "husky": "^7.0.4"
  },
  "private": true,
  "license": "MIT"
}
