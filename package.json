{
  "name": "hello-zoom",
  "version": "0.1.0",
  "description": "A Zoom App Template",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "server",
    "app"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "build": ".scripts/build.sh",
    "dev": ".scripts/dev.sh",
    "prepare": "husky install",
    "prestart": "npm run build",
    "postinstall": "chmod -R +x .scripts && $_/gen-secrets.sh"
  },
  "devDependencies": {
    "concurrently": "^7.1.0",
    "dotenv-cli": "^5.1.0",
    "husky": "^7.0.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
